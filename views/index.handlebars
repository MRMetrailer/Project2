<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" method="POST" action="/api/games">
          <div class="form-group">
            <label for="example-name">Name</label>
            <input type="text" id="example-name" class="form-control" aria-describedby="example-name" placeholder="Enter Name">
          </div>
           <div class="form-group">
            <label for="example-entries">Entries</label>
            <input type="text" id="example-entries" class="form-control" aria-describedby="example-entries" placeholder="Entries">
          </div>
           <div class="form-group">
            <label for="example-link">Link</label>
            <input type="text" id="example-link" class="form-control" aria-describedby="example-link" placeholder="Enter Image Link">
          </div>
         
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Games:</h3>
        <ul id="example-list" class="list-group">
          {{#each games}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="games/{{this.id}}">{{this.name}} -- {{#if this.is_over}}OVER{{else}}OPEN{{/if}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
